<% provide(:title, @title ) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>        
      </h1>
      <%= @user.email %>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>        
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">    
    <section>
    <% if @users.any? %>
      <h3><%= @h3_follows %></h3>
      <div class="users-small">
        <ul class="users">          
          <% @users.each do |user| %>
            <li><%= gravatar_for(user, size: 24) %><%= link_to user.name, user %></li>
          <% end %>
        </ul>
      </div>        
    <% end %>
    </section>
    <section>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <center>
      <%= will_paginate @microposts, :param_name => 'microposts_page' %>
      </center>
    <% end %>
    </section>
  </div>
</div>