<% @user ||= current_user %> 
<div>
	<h1>	
		<%= link_to gravatar_for(@user), user_path(@user) %>
		<%= link_to @user.name, @user %>
	</h1>
	<span>
		<%= pluralize(@user.microposts.count, "micropost") %>
	</span>
</div>

<div>
	<%= render 'follow_form' if signed_in? && !current_user?(@user) %> 
</div>

