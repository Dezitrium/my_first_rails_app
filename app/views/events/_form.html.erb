<%= simple_form_for [@user, @event], :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', target: f.object %>

  <%= f.input :title, input_html: { class: 'span4' } %>
  <%= f.input :recurring_type, collection: @recurring_types, input_html: { class: 'input-small' } %>

  <%= f.input :start_at, input_html: { class: 'span2' }, wrapper_html: { class: 'controls-row' } %>  
  <%= f.input :end_at, input_html: { class: 'span2' }, wrapper_html: { class: 'controls-row' } %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= submit_tag 'Cancel', type: :reset, class: "btn btn-danger" %>
  </div>
<% end %>
