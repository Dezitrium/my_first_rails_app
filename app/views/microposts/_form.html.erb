<%= simple_form_for @micropost, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', target: f.object %>

  <div class="field">
    <%= f.text_area :content, 
    		placeholder: "Compose new micropost..." , 
    		rows: 5, 
    	  maxlength: Micropost::MAXIMUM_LENGTH %>
    <span id="microposts_char-counter" ></span>
  </div>

  <%= f.button :submit, class: 'btn-primary' %>
  <%= submit_tag 'Cancel', type: :reset, class: "btn btn-danger", name: :reset %>

<% end %>
